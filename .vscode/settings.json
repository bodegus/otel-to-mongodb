{
    // Python formatting and linting
    "python.defaultInterpreterPath": "./venv/bin/python",
    // Editor settings
    "editor.rulers": [
        100
    ],
    "editor.wordWrap": "off",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    // Language-specific settings
    "[python]": {
        "editor.rulers": [
            100
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll.ruff": "explicit"
        }
    },
    // Formatter settings
    "black-formatter.args": [
        "--line-length=100"
    ],
    // Ruff settings (primary linter - fast and comprehensive)
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "ruff.args": [
        "--line-length=100"
    ],
    // Flake8 removed - using Ruff exclusively
    // File associations
    "files.associations": {
        "*.yml": "yaml",
        "*.yaml": "yaml"
    },
    // Auto-save and formatting
    "files.autoSave": "onFocusChange",
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // Python testing
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "app/tests/"
    ],
    "python.testing.unittestEnabled": false,
    // Python linting priority (Ruff first, then flake8 for compatibility)
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.linting.flake8Enabled": false, // Disabled in favor of Ruff
    // Import sorting now handled by Ruff automatically
}
