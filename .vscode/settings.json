{
    // Python formatting and linting
    "python.defaultInterpreterPath": "./venv/bin/python",
    // Editor settings
    "editor.rulers": [
        100
    ],
    "editor.wordWrap": "off",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    // Language-specific settings
    "[python]": {
        "editor.rulers": [
            100
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll.ruff": "explicit"
        }
    },
    // Ruff formatting (replaces Black)
    "ruff.format.args": [],
    // Ruff settings (primary linter - fast and comprehensive)
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "ruff.args": [
        "--line-length=100"
    ],
    // Flake8 removed - using Ruff exclusively
    // File associations
    "files.associations": {
        "*.yml": "yaml",
        "*.yaml": "yaml"
    },
    // Auto-save and formatting
    "files.autoSave": "onFocusChange",
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    // Python testing
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "app/tests/"
    ],
    "python.testing.unittestEnabled": false,
    // Python linting priority (Ruff first, then flake8 for compatibility)
    "python.linting.enabled": true,
    "python.linting.ruffEnabled": true,
    "python.linting.flake8Enabled": false, // Disabled in favor of Ruff
    "python.linting.maxLineLength": 100,
    "python.analysis.autoImportCompletions": true,
    // Import sorting now handled by Ruff automatically
    // Ruff handles all formatting (no additional args needed)
    // Pylsp settings (if using)
    "pylsp.plugins.pycodestyle.maxLineLength": 100,
    "pylsp.plugins.flake8.maxLineLength": 100,
    // Flake8 extension settings (force 100 chars or disable)
    "flake8.args": [
        "--max-line-length=100"
    ],
    "flake8.enabled": false,
    // Disable deprecated extensions in favor of Ruff
    "isort.check": false
}
